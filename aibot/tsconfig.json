{
    "compilerOptions": {
        "noEmit": true,
        "target": "es6",
        "module": "commonjs",
        "jsx": "react",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "*",
                "*.css"
            ]
        },
        "allowImportingTsExtensions": true
    },
    "include": [
        "src"
    ]
}